<Window x:Class="Project_10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_10"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="10,10,10,10">
            <Image Name="webcamImage"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,10,10">
            <TextBox x:Name="userInfo" Text="현재 사용자 상태 : " FontSize="24"  VerticalContentAlignment="Center" FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="3" Margin="10,10,10,10">
            <Button x:Name="startButton" Content="웹캠 연결" FontSize="24" FontWeight="Bold" Click="startButton_Click"/>
        </Grid>

        <Grid Grid.Row="3" Grid.Column="4" Margin="10,10,10,10">
            <Button x:Name="closeButton" Content="연결 해제" FontSize="24" FontWeight="Bold" Click="closeButton_Click" />
        </Grid>

    </Grid>
</Window>
